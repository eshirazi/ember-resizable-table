{{#unless (eq coordY 0)}}
  <div style={{sashTopStyle}} onmousedown={{action (action sashClicked "top")}}></div>
{{/unless}}
{{#unless (eq (inc coordX colSpan) numColumns)}}
  <div style={{sashRightStyle}} onmousedown={{action (action sashClicked "right")}}></div>
{{/unless}}
{{#unless (eq (inc coordY rowSpan) numRows)}}
  <div style={{sashBottomStyle}} onmousedown={{action (action sashClicked "bottom")}}></div>
{{/unless}}
{{#unless (eq coordX 0)}}
  <div style={{sashLeftStyle}} onmousedown={{action (action sashClicked "left")}}></div>
{{/unless}}{{!--
{{coordX}}, {{coordY}}<br>
--}}{{yield}}